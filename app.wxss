@import 'style/weui.wxss';

.container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    background: #e8e8ed;
    font-size: 12px;
}
.header {
    position: fixed;
    top: 0px;
    width: 100%;
    z-index: 999;
}
.header:after {
    content: " ";
    position: absolute;
    top: -1px;
    left: 0;
    right: 0;
    height: 1px;
    border-bottom: 1rpx solid #b2b2b2;
    color: #D9D9D9;
}
.footer {
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    z-index: 99999;
}
.footer:after {
    content: " ";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    border-top: 1rpx solid #D9D9D9;
    color: #D9D9D9;
}
.dialog-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.6);
    display: none;
}
.dialog-container {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 5000;
    background: white;
    transform: translateY(100%);
    transition: all 0.3s ease;
}
.dialog-mask-show .dialog-mask {
    display: block;
    animation: fadeIn ease .3s forwards;
}
.dialog-mask-show .dialog-container {
    transform: translateY(0);
}
.dialog-picker {
    width: 100%;
    height: 250px;
}
.dialog-button {
    position: relative;
    display: flex;
    padding: 9px 15px;
    font-size: 17px;
    border-bottom: 1rpx solid #D9D9D9;
}
.dialog-button-cancel {
    float: left;
    flex: 1;
    color: #888;
}
.dialog-button-ok {
    float: right;
    flex: 1;
    color: #1AAD19;
    text-align: right;
}
.margin-top {
    margin-top: 10px;
}
.weui-navbar__item.weui-bar__item_on {
    color: #c81623;
}
.weui-navbar__slider {
    background-color: #c81623;
}
.weui-tab {
    background-color: #ffffff;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}