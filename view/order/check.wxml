<import src="/component/quantity/index.wxml" />

<view class="container">
  <view class="header"></view>
  <view class="weui-panel weui-panel_access">
    <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">Ronaldo 15900672218</view>
        <view class="weui-media-box__desc address">上海上海市黄浦区新天地</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <view class="weui-panel weui-panel_access">
    <view url="" class="weui-media-box weui-media-box_appmsg" wx:for="{{cart_list}}" wx:for-item="product" wx:key="{{product.product_id}}">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="weui-media-box__thumb image" src="{{product.product_image}}" />
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">{{product.product_name}}</view>
        <view class="weui-media-box__desc">
          <template is="zan-quantity" data="{{ ...product.product_quantity, componentId: product.product_id }}" />
        </view>
      </view>
      <view class="weui-cell__ft">￥{{product.product_quantity.quantity * product.product_price}}</view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title margin-top">
    <view url="/view/order/index" class="weui-cell weui-cell_access">
      <view class="weui-cell__bd">商品金额</view>
      <view class="weui-cell__ft weui-cell__ft_in-access order-info">￥399.00</view>
    </view>
    <view url="/view/order/index" class="weui-cell weui-cell_access">
      <view class="weui-cell__bd">运费</view>
      <view class="weui-cell__ft weui-cell__ft_in-access order-info">￥0.00</view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title margin-top">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入买家留言" style="height: 3.3em" />
                </view>
            </view>
        </view>
  <view class="footer">
    <view class="footer-total">
      <view class="footer-total-checkbox" bindtap="handleAll">
      </view>
      <view class="footer-total-text">
        总计: ￥320.00
      </view>
    </view>
    <view class="footer-balance" style="background-color: #1AAD19;">
      立即支付
    </view>
  </view>
</view>