.checkbox {
    position: absolute;
    top: 50%;
    margin-top: -12px;
    left: 50%;
    margin-left: -12px;
    width: 23px;
    height: 23px;
    line-height: 23px;
}
.footer-total {
    float: left;
    width: 70%;
    height: 50px;
    line-height: 50px;
    font-size: 14px;
    background-color: #ffffff;
}
.footer-total-checkbox {
    position: absolute;
    width: 50px;
    height: 50px;
    text-align: center;
}
.footer-total-text {
    text-align: right;
    margin-right: 10px;
}
.footer-balance {
    float: left;
    width: 30%;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    color: #ffffff;
    text-align: center;
    background-color: #c81623;
}