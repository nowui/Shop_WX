.index-category {
    overflow: hidden;
    background: #ffffff;
    border-top: 1rpx solid #D9D9D9;
    border-bottom: 1rpx solid #D9D9D9;
}
.index-category-item {
    float: left;
    width: 33.33%;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 8px;
}
.index-category-item-icon {
    position: relative;
    margin-left: -25px;
    margin-bottom: 5px;
    left: 50%;
    width: 50px;
    height: 50px;
    border-radius: 25px;
    background: #000000;
}
.index-category-item-icon-image {
    margin-top: 10px;
    width: 30px;
    height: 30px;
}
.index-product {
    border-top: 1rpx solid #D9D9D9;
}
.index-product-card {
    padding: 10px;
    border-bottom: 1rpx solid #D9D9D9;
}
.index-product-card-image {

}
.index-product-card-name {
    font-size: 14px;
    font-weight: bold;
}
.index-product-card-price {
    color: #c81623;
    margin-top: 5px;
    margin-left: -2px;
}
.category-right-item {
    float: left;
    border: #dddddd 1rpx solid;
    background: #ffffff;
    background-repeat: no-repeat;
    background-size: contain;
}
.category-right-item-name {
    margin-top: 5px;
    padding-left: 5px;
}
.category-right-item-price {
    color: #c81623;
    margin-top: 2px;
    margin-bottom: 8px;
    padding-left: 3px;
}