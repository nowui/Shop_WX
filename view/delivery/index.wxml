<view class="container">
  <view class="header"></view>
  <view class="weui-panel weui-panel_access">
    <navigator url="/view/delivery/detail?delivery_id={{delivery.delivery_id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{delivery_list}}" wx:for-item="delivery" wx:key="{{delivery.delivery_id}}">
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" style="height: 41px;">
        <view class="weui-media-box__title">{{delivery.delivery_name}} {{delivery.delivery_phone}}</view>
        <view class="weui-media-box__desc address">{{delivery.delivery_address}}</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <view class="footer">
    <navigator url="/view/delivery/detail" class="footer-add">
      新增收货地址
    </navigator>
  </view>
</view>